<!-- MainWindow.xaml -->
<Window x:Class="simulation_app.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Simulation Shell" Width="1100" Height="680"
        WindowStartupLocation="CenterScreen">
    <DockPanel>
        <!-- 상단 네비게이션 바 -->
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Background="#222" Height="42">
            <Button Content="Simulator" Margin="8,6" Padding="12,4"
                    Command="{Binding GoSimulatorCmd}"/>
            <Button Content="Manual Inputs" Margin="0,6" Padding="12,4"
                    Command="{Binding GoManualCmd}"/>
        </StackPanel>

        <!-- 본문 영역: 현재 ViewModel 가 표시됨 -->
        <ContentControl Content="{Binding CurrentViewModel}" Margin="12"/>
    </DockPanel>
</Window>
